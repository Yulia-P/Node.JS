{{>list}}
<div class="div5 group">
    <input type="text" name="name" placeholder="FullName" id="name"></input>
    <input type="text" name="phone_number" placeholder="+375(29)123-45-66" id="phone_number"></input>
</div>
<div class="div5">
    <button onclick="ValidPhone()" class="button1">
        Insert
    </button>
    {{#cancel}}{{/cancel}}
</div>

<script type="text/javascript">function ValidPhone() {
        var re = /^[+][\d]{3}[(][\d]{2}[)][\d]{3}-[\d]{2}-[\d]{2}$/;
        var myPhone = document.getElementById('phone_number').value;
        var valid = re.test(myPhone);
        if (valid) Add();
        else alert("Phone number is not correct");

    }</script>